<div class='section' id='signin'>
<div class='section'>
<h2>Sign In: </h2>
  <%= render 'sessions/form' %>
<ul>
  <li>
    <%= link_to "Forgot password?", new_password_path %>
  </li>
</ul>
</div>
</div>

<script type="text/javascript">
  $("#signin").hide();
  $('[href="#signin"]').click(function(e){
    e.preventDefault();
    $('#new_user_signup').hide();
    $("#signin").slideDown();
  });
</script>
